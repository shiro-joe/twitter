{% extends "base.njk" %}
{% block title %}Sign-in 画面{% endblock %}
{% block content %}
<div class="m-auto w-75 px-5 py-3 border rounded">
  <form method="post" action="/sign-in">
    <label for="userName" class="form-label">ユーザーネーム</label>
    <input id="userName" name="userName" type="text" class="form-control mb-2" value="">
    <label for="password" class="form-label">パスワード</label>
    <input id="password" name="password" type="password" class="form-control mb-4">
    <div class="text-center">
      <input type="submit" class="mt-1 mb-2 btn btn-outline-primary text-end" value="サインイン">
    </div>
  </form>
</div>
<div class="my-5 text-center">
  <a class="btn btn-outline-primary" href="/sign-up">サインアップ</a>
</div>
{% endblock %}